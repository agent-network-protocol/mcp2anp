{
  "openrpc": "1.3.2",
  "info": {
    "title": "Hotel Booking API",
    "version": "1.2.0",
    "description": "OpenRPC interface for hotel booking operations"
  },
  "servers": [
    {
      "url": "https://grand-hotel.com/api/booking"
    }
  ],
  "methods": [
    {
      "name": "searchRooms",
      "description": "Search available rooms for given dates",
      "params": [
        {
          "name": "checkIn",
          "description": "Check-in date (YYYY-MM-DD)",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "required": true
        },
        {
          "name": "checkOut",
          "description": "Check-out date (YYYY-MM-DD)",
          "schema": {
            "type": "string",
            "format": "date"
          },
          "required": true
        },
        {
          "name": "guests",
          "description": "Number of guests",
          "schema": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6
          },
          "required": false
        }
      ],
      "result": {
        "name": "availableRooms",
        "schema": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "roomType": {"type": "string"},
              "price": {"type": "number"},
              "available": {"type": "boolean"}
            }
          }
        }
      }
    },
    {
      "name": "confirmBooking",
      "description": "Confirm a room booking",
      "params": [
        {
          "name": "checkIn",
          "schema": {"type": "string", "format": "date"},
          "required": true
        },
        {
          "name": "checkOut",
          "schema": {"type": "string", "format": "date"},
          "required": true
        },
        {
          "name": "roomType",
          "schema": {"type": "string"},
          "required": true
        },
        {
          "name": "guestInfo",
          "schema": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "email": {"type": "string", "format": "email"},
              "phone": {"type": "string"}
            },
            "required": ["name", "email"]
          },
          "required": true
        }
      ],
      "result": {
        "name": "bookingConfirmation",
        "schema": {
          "type": "object",
          "properties": {
            "bookingId": {"type": "string"},
            "status": {"type": "string"},
            "totalPrice": {"type": "number"},
            "confirmationCode": {"type": "string"}
          }
        }
      }
    }
  ]
}